# .gitattributes file

# Auto detect text files and perform LF normalization
* text=auto

# JS and TS files must always use LF for tools to work
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf

# CSS/SCSS files must always use LF for tools to work
*.css text eol=lf
*.scss text eol=lf
*.module.css text eol=lf
*.module.scss text eol=lf

# HTML files must always use LF for tools to work
*.html text eol=lf

# Markdown files must always use LF for tools to work
*.md text eol=lf

# Images should be treated as binary
# (binary is a macro for -text -diff)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Fonts
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary

# RC files
*.*rc text eol=lf
.env* text eol=lf
.gitignore text eol=lf

# Lock files
package-lock.json text -diff
yarn.lock text -diff

# Scripts should use LF
*.sh text eol=lf